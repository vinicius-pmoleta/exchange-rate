<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Navigation">
        <item name="itemBackground">@color/colorPrimary</item>
        <item name="itemIconTint">@drawable/navigation_options_selector</item>
        <item name="itemTextColor">@drawable/navigation_options_selector</item>
    </style>

    <style name="AppTheme.Usage" />

    <style name="AppTheme.Usage.Information">
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

</resources>
